{
  "manifest_version": 3,
  "name": "You",
  "version": "2.1",
  "description": "Accessing your social self",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "tabs",
    "notifications"
  ],
  "icons": {
    "16": "img/person16.png",
    "32": "img/person32.png",
    "48": "img/person48.png",
    "128": "img/person128.png"
  },
  "action": {
    "default_popup": "pop.html",
    "default_icon": "img/person16.png"
  },
  "background": {
    "service_worker": "modules/background.js"
  },
  "host_permissions": [
    "https://www.facebook.com/*"
  ]
}
